
<% for (var i in posts) { %>
  <div class="post">
    <div class="page-header">
      <h1>
        <a href='/posts/<%= posts[i].id %>' class='titlelink'> <%= posts[i].title %> </a>

        <small>por <em> <%= posts[i].author && posts[i].author.name || "Sin autor" %> </em></small>
      </h1>
     <em> <%= posts[i].updatedAt.toLocaleDateString() %></em>
   </div>
   <% if (session.user) { %>
        <% var form_name = 'fpj' + i; %>
          <% if (posts[i].isFavourite) { %>
            <form class="fav_form" class="fav_form" name='<%= form_name %>' method="post" action='/users/<%= session.user.id %>/favourites/<%= posts[i].id %>' >
            <input type='hidden' name='_method' value='delete'>
            <a class="fav fav_on" href=''  onclick="return submitForm('<%= form_name %>')">Eliminar de favoritos</a>
            </form>        
          <% } else { %> 
            <form class="fav_form" name='<%= form_name %>' method="post" action='/users/<%= session.user.id %>/favourites/<%= posts[i].id %>' >
            <input type='hidden' name='_method' value='put'>
            <a class="fav fav_off" href=''  onclick="return submitForm('<%= form_name %>')">Hacer favorito</a>
            </form>
          <% } %>
     <% } %>
      
     <p class="body">
        <%= posts[i].body.slice(0,1000) %> ... 
     </p>


     <footer class="pull-right">

      <% if (session.user && session.user.id == posts[i].authorId) {%>

        <% var form_name = 'fpi' + i; %>

        <form method='post' action='/posts/<%= posts[i].id %>'
              name='<%= form_name %>'>
          <input type='hidden' name='_method' value='delete'>
          <a class='btn btn-warning btn-mini' href="/posts/<%= posts[i].id %>/edit"> 
             <i class='icon-edit icon-white'></i> Editar 
          </a> 
          <a class='btn btn-danger btn-mini' href="" 
             onclick="return confirmarSubmit('Â¿Seguro que desea borrar el post?', '<%= form_name %>')"> 
             <i class='icon-trash icon-white'></i> Borrar
          </a>  
        </form>

      <% } %>

     <footer>
  </div>
<%  }; %>

<footer>
  <nav>
    <a href="/posts/new"> <i class='icon-plus-sign'></i> Crear nuevo Post </a>
  </nav>
</footer>

